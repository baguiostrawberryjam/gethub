<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme (Assuming your app uses a Material Component Theme) -->
    <!-- You may already have AppTheme defined. Add these custom styles below it. -->

    <!-- Style for all input field labels (e.g., FIRST NAME) -->
    <style name="InputLabelStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/neutral_deep</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarDateText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/neutral_deep</item>
    </style>

    <style name="CalendarWeekDayText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_purple</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for all input EditText fields -->
    <style name="InputEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/neutral_deep</item>
        <item name="android:background">@drawable/sh_rounded_input</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <!-- Style for all real-time error messages -->
    <style name="ErrorTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/status_rejected</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Style for the Scrollable Spinner content -->
    <style name="SpinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/neutral_deep</item>
    </style>

</resources>