<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/svPage2"
    android:fillViewport="true"
    tools:context=".auth.RegistrationPage2Fragment">

    <LinearLayout
        android:id="@+id/llPage2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/tvPageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact &amp; Verification (2/5)"
            android:textSize="24sp"
            android:textColor="@color/neutral_deep"
            android:textStyle="bold"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp"/>

        <!-- Email Input -->
        <TextView
            android:id="@+id/tvEmail"
            style="@style/InputLabelStyle"
            android:text="EMAIL ADDRESS (Required)"/>

        <EditText
            android:id="@+id/etEmail"
            style="@style/InputEditTextStyle"
            android:hint="Enter valid email address"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="0dp"/>

        <TextView
            android:id="@+id/errEmail"
            style="@style/ErrorTextStyle"
            android:layout_marginBottom="16dp"
            tools:text="Please enter a valid email address."/>

        <!-- OTP Send Button (Updated ID to btnSendCode) -->
        <Button
            android:id="@+id/btnSendCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Code"
            android:background="@drawable/sel_button_login"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="end"
            android:paddingHorizontal="16dp"
            android:backgroundTint="@null"/>

        <!-- OTP Code Input (Updated ID to etOTP) -->
        <TextView
            android:id="@+id/tvOtpCode"
            style="@style/InputLabelStyle"
            android:text="OTP CODE (Required)"/>

        <EditText
            android:id="@+id/etOTP"
            style="@style/InputEditTextStyle"
            android:hint="Enter 6-digit code"
            android:inputType="number"
            android:maxLength="6"
            android:layout_marginBottom="0dp"/>

        <!-- OTP Error Text (Updated ID to errOTP) -->
        <TextView
            android:id="@+id/errOTP"
            style="@style/ErrorTextStyle"
            android:layout_marginBottom="16dp"
            tools:text="OTP must be 6 digits and verified."/>

    </LinearLayout>
</ScrollView>