<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/svRequestPage1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".requests.RequestPage1Fragment">

    <LinearLayout
        android:id="@+id/llPage1Main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/tvPageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request Details (1/3)"
            android:textSize="24sp"
            android:textColor="@color/neutral_deep"
            android:textStyle="bold"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/tvDeliveryMethod"
            style="@style/InputLabelStyle"
            android:text="DELIVERY METHOD (Required)"/>

        <LinearLayout
            android:id="@+id/llDeliveryButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp"
            android:weightSum="2"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnDigital"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Digital (Email)"
                android:textColor="@color/neutral_deep"
                android:background="@drawable/sh_rounded_input"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                app:backgroundTint="@null"/>

            <Button
                android:id="@+id/btnPickup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pick-up (Physical)"
                android:textColor="@color/neutral_deep"
                android:background="@drawable/sh_rounded_input"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                app:backgroundTint="@null"/>
        </LinearLayout>

        <TextView
            android:id="@+id/errDeliveryMethod"
            style="@style/ErrorTextStyle"
            android:layout_marginBottom="16dp"
            tools:text="Please select a delivery method."/>

        <TextView
            android:id="@+id/tvDocumentType"
            style="@style/InputLabelStyle"
            android:text="DOCUMENT TYPE (Required)"/>

        <Spinner
            android:id="@+id/spDocumentType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:spinnerMode="dropdown"
            android:dropDownHeight="240dp"/>

        <TextView
            android:id="@+id/errDocumentType"
            style="@style/ErrorTextStyle"
            android:layout_marginBottom="16dp"
            tools:text="Please select the document you wish to request."/>

        <TextView
            android:id="@+id/tvFeeLabel"
            style="@style/InputLabelStyle"
            android:text="SERVICE FEE"/>

        <TextView
            android:id="@+id/tvServiceFee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â‚±0.00"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/neutral_deep"
            android:layout_marginHorizontal="16dp"
            android:padding="8dp"/>

    </LinearLayout>
</ScrollView>