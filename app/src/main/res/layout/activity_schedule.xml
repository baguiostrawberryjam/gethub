<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llScheduleMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".appointments.ScheduleActivity">

    <LinearLayout
        android:id="@+id/llScheduleHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp"
        android:background="@android:color/white">

        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            app:tint="@color/neutral_deep"/>

        <TextView
            android:id="@+id/tvScheduleTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Schedule Appointment"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/neutral_deep"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="8dp"/>

        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvLinkedTicketLabel"
                style="@style/InputLabelStyle"
                android:text="APPOINTMENT FOR TICKET"/>

            <TextView
                android:id="@+id/tvLinkedTicketId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary_purple"
                android:padding="8dp"
                android:layout_marginBottom="24dp"
                tools:text="REQ-0001 (Transcript of Records)"/>

            <TextView
                android:id="@+id/tvDateLabel"
                style="@style/InputLabelStyle"
                android:text="DATE OF PICKUP (Required)"/>

            <TextView
                android:id="@+id/tvSelectedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tap to Select Date"
                android:background="@drawable/sh_rounded_input"
                android:textColor="@color/neutral_deep"
                android:textSize="18sp"
                android:paddingVertical="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:drawableStart="@drawable/ic_calendar_filled"
                android:drawableTint="@color/primary_purple"
                android:drawablePadding="10dp"
                android:gravity="start|center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/errDate"
                style="@style/ErrorTextStyle"
                android:layout_marginBottom="24dp"
                android:visibility="gone"
                tools:text="Date selection is required."/>

            <TextView
                android:id="@+id/tvTimeLabel"
                style="@style/InputLabelStyle"
                android:text="CHOOSE TIME SLOT"/>

            <Spinner
                android:id="@+id/spTimeSlot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:entries="@array/time_slots"
                android:background="@drawable/sh_rounded_input"
                android:padding="12dp"/>

            <Button
                android:id="@+id/btnConfirmSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Appointment"
                android:background="@drawable/sel_button_primary"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:backgroundTint="@null"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>