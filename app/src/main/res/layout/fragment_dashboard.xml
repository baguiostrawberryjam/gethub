<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/svDashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".home.DashboardFragment">

    <LinearLayout
        android:id="@+id/llDashboardMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_gray"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llHeaderBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp">


            <TextView
                android:id="@+id/tvDashboardHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dashboard"
                android:textColor="@color/neutral_deep"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/ibNotifications"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Notifications"
                android:src="@drawable/ic_notifications_filled"
                app:tint="@color/neutral_deep" />

            <ImageButton
                android:id="@+id/ibProfile"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/sh_profile_circle_border"
                android:contentDescription="Profile"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile_filled" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llDashboardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp">

            <TextView
                android:id="@+id/tvFilterPlaceholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/sh_rounded_input"
                android:drawableStart="@drawable/ic_search_outlined"
                android:drawablePadding="10dp"

                android:gravity="start|center_vertical"
                android:padding="12dp"
                android:text="Search"
                app:drawableTint="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_panel_white_rounded"
                android:elevation="4dp"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:paddingVertical="15dp">

                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome to"
                    android:textColor="@color/neutral_deep"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GetHub"
                    android:textColor="@color/neutral_deep"
                    android:textSize="40sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_panel_white_rounded"
                android:elevation="4dp"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:paddingVertical="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Request Summaries"
                        android:textColor="@color/neutral_deep"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnViewAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_panel_gray_soft_rounded"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:stateListAnimator="@null"
                        android:text="View All"
                        android:textAllCaps="false"
                        android:textColor="@color/neutral_deep"
                        android:textSize="12sp" />


                </LinearLayout>

                <!--row 1-->

                <LinearLayout
                    android:id="@+id/llStatusContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/llTotalRequestsCard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_panel_gray_soft_rounded"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <ImageView
                            android:id="@+id/ivRequestIcon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="Panel Icon"
                            android:padding="0dp"
                            android:src="@drawable/ic_file_type" />

                        <TextView
                            android:id="@+id/tvTotalRequests"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="0"
                            android:textColor="@color/neutral_deep"
                            android:textSize="35sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="Requested"
                            android:textColor="@color/gray"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llPendingRequestsCard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_panel_gray_soft_rounded"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <ImageView
                            android:id="@+id/ivPendingIcon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="Panel Icon"
                            android:padding="0dp"
                            android:src="@drawable/ic_processing" />

                        <TextView
                            android:id="@+id/tvPendingRequests"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/neutral_deep"
                            android:textSize="35sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="Pending"
                            android:textColor="@android:color/holo_orange_dark"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!--                row 2-->
                <LinearLayout
                    android:id="@+id/llStatusContainer2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/llCompletedRequestsCard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_panel_gray_soft_rounded"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <ImageView
                            android:id="@+id/ivRequestIcon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="Panel Icon"
                            android:padding="0dp"
                            android:src="@drawable/ic_completed" />

                        <TextView
                            android:id="@+id/tvCompletedRequests"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="0"
                            android:textColor="@color/neutral_deep"
                            android:textSize="35sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="Completed"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llRejectedRequestsCard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_panel_gray_soft_rounded"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <ImageView
                            android:id="@+id/ivRequestIcon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="Panel Icon"
                            android:padding="0dp"
                            android:src="@drawable/ic_rejected" />

                        <TextView
                            android:id="@+id/tvCompletedRequests"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="0"
                            android:textColor="@color/neutral_deep"
                            android:textSize="35sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="Rejected"
                            android:textColor="@color/status_rejected"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/tvRecentActivityHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="RECENT ACTIVITY"
                android:textColor="@color/neutral_deep"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNoNotifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:text="No recent notifications."
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>