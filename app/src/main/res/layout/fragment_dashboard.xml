<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/svDashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".home.DashboardFragment">

    <LinearLayout
        android:id="@+id/llDashboardMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llHeaderBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:background="@android:color/white"
            android:elevation="4dp">

            <TextView
                android:id="@+id/tvDashboardHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dashboard"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/neutral_deep" />

            <ImageButton
                android:id="@+id/ibNotifications"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_notifications_filled"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Notifications"
                app:tint="@color/primary_purple"
                android:layout_marginEnd="8dp" />
            <ImageButton
                android:id="@+id/ibProfile"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_profile_filled"
                android:background="@drawable/sh_profile_circle_border"
                android:scaleType="centerCrop"
                android:contentDescription="Profile" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llDashboardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to GetHub!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/neutral_deep"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REQUEST SUMMARY"
            android:textSize="14sp"
            android:textColor="@color/neutral_deep"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/llStatusContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:id="@+id/llTotalRequestsCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@drawable/sh_rounded_card_neutral"
                android:layout_marginEnd="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textSize="12sp"
                    android:textColor="@color/neutral_deep" />

                <TextView
                    android:id="@+id/tvTotalRequests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/neutral_deep"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPendingRequestsCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@drawable/sh_rounded_card_neutral"
                android:layout_marginHorizontal="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:textSize="12sp"
                    android:textColor="@android:color/holo_orange_dark" />

                <TextView
                    android:id="@+id/tvPendingRequests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_orange_dark" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCompletedRequestsCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@drawable/sh_rounded_card_neutral"
                android:layout_marginStart="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completed"
                    android:textSize="12sp"
                    android:textColor="@android:color/holo_green_dark" />

                <TextView
                    android:id="@+id/tvCompletedRequests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvRecentActivityHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RECENT ACTIVITY"
            android:textSize="14sp"
            android:textColor="@color/neutral_deep"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvNoNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No recent notifications."
            android:gravity="center"
            android:padding="16dp"
            android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>