<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".notifications.NotificationActivity">

    <!-- Header Bar: Back Button, Title, Profile Icon -->
    <LinearLayout
        android:id="@+id/llNotificationHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp"
        android:background="@android:color/white">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            app:tint="@color/neutral_deep"/>

        <!-- Title -->
        <TextView
            android:id="@+id/tvNotificationTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Notifications"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/neutral_deep"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="8dp"/>

        <!-- Profile Icon (Leads to ProfileActivity) -->
        <ImageButton
            android:id="@+id/ibProfile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_profile_filled"
            android:background="@drawable/sh_profile_circle_border"
            android:scaleType="centerCrop"
            android:contentDescription="Profile" />
    </LinearLayout>

    <!-- Notification List Container (RecyclerView Placeholder) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNotifications"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp"
        tools:listitem="@layout/item_notification"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <!-- Empty State -->
    <TextView
        android:id="@+id/tvEmptyState"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="You are all caught up! No recent notifications."
        android:gravity="center"
        android:visibility="gone"/>

</LinearLayout>