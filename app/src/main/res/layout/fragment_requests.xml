<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llRequestsMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".requests.RequestsFragment">

    <LinearLayout
        android:id="@+id/llRequestsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp"
        android:background="@android:color/white">

        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            app:tint="@color/neutral_deep"/>

        <TextView
            android:id="@+id/tvRequestsHeaderTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="My Requests"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/neutral_deep"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="8dp"/>

        <ImageButton
            android:id="@+id/ibProfile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_profile_filled"
            android:background="@drawable/sh_profile_circle_border"
            android:scaleType="centerCrop"
            android:contentDescription="Profile" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvFilterPlaceholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter/Search bar placeholder here."
        android:padding="8dp"
        android:background="@drawable/sh_rounded_input"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRequestsList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp"
        android:clipToPadding="false"
        tools:listitem="@layout/item_request_ticket"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


    <TextView
        android:id="@+id/tvNoRequests"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="You currently have no requests."
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone" />

</LinearLayout>