<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llRequestsMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".requests.RequestsFragment">

    <LinearLayout
        android:id="@+id/llPage2Main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_header_blk_gray"
        android:paddingBottom="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/llRequestsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp">

            <Button
                android:id="@+id/ibBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="start"
                android:background="@drawable/bg_circle_button"
                android:drawableStart="@drawable/ic_arrow_back"
                android:drawablePadding="0dp"
                android:drawableTint="@color/neutral_deep"
                android:elevation="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingHorizontal="12dp"
                android:stateListAnimator="@null"
                android:text=""
                android:textColor="@android:color/transparent"
                app:backgroundTint="@null"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="My Requests"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageButton
                android:id="@+id/ibProfile"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_profile_filled"
                android:background="@drawable/sh_profile_circle_border"
                android:scaleType="centerCrop"
                android:contentDescription="Profile"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_main_panel_rounded"
            android:elevation="4dp"
            android:padding="24dp">

        <TextView
            android:id="@+id/tvFilterPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search requests"
            android:padding="12dp"
            android:background="@drawable/sh_rounded_input"
            android:layout_marginBottom="16dp"

            android:drawableStart="@drawable/ic_search_outlined"
            android:drawablePadding="10dp"
            android:gravity="start|center_vertical"
            app:drawableTint="@color/gray" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRequestsList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            tools:listitem="@layout/item_request_ticket"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


        <TextView
            android:id="@+id/tvNoRequests"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="You currently have no requests."
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>