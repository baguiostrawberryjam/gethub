<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llRequestsMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".requests.RequestsFragment">

    <TextView
        android:id="@+id/tvRequestsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MY REQUESTS"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/neutral_deep"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvFilterPlaceholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter/Search bar placeholder here."
        android:padding="8dp"
        android:background="@drawable/sh_rounded_input"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvNoRequests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You currently have no requests."
        android:gravity="center"
        android:padding="32dp"
        android:visibility="visible" />

</LinearLayout>