<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/svPage3"
    android:fillViewport="true"
    tools:context=".auth.RegistrationPage3Fragment">

    <LinearLayout
        android:id="@+id/llPage3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/tvPageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Credentials (3/5)"
            android:textSize="24sp"
            android:textColor="@color/neutral_deep"
            android:textStyle="bold"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp"/>

        <!-- Student ID Input -->
        <TextView
            android:id="@+id/tvStudentID"
            style="@style/InputLabelStyle"
            android:text="STUDENT ID (Required)"/>

        <EditText
            android:id="@+id/etStudentID"
            style="@style/InputEditTextStyle"
            android:hint="Enter 10-digit student ID"
            android:inputType="number"
            android:maxLength="10"
            android:layout_marginBottom="0dp"/>

        <TextView
            android:id="@+id/errStudentId"
            style="@style/ErrorTextStyle"
            android:layout_marginBottom="16dp"
            tools:text="Student ID must be 10 digits."/>

        <!-- Password Input -->
        <TextView
            android:id="@+id/tvPassword"
            style="@style/InputLabelStyle"
            android:text="PASSWORD (Required)"/>

        <EditText
            android:id="@+id/etPassword"
            style="@style/InputEditTextStyle"
            android:hint="Min 8 characters"
            android:inputType="textPassword"
            android:layout_marginBottom="0dp"/>

        <TextView
            android:id="@+id/errPassword"
            style="@style/ErrorTextStyle"
            android:layout_marginBottom="16dp"
            tools:text="Password must be at least 8 characters."/>

        <!-- Confirm Password Input -->
        <TextView
            android:id="@+id/tvConfirmPassword"
            style="@style/InputLabelStyle"
            android:text="CONFIRM PASSWORD (Required)"/>

        <EditText
            android:id="@+id/etConfirmPassword"
            style="@style/InputEditTextStyle"
            android:hint="Re-enter password"
            android:inputType="textPassword"
            android:layout_marginBottom="0dp"/>

        <TextView
            android:id="@+id/errConfirmPassword"
            style="@style/ErrorTextStyle"
            android:layout_marginBottom="16dp"
            tools:text="Passwords do not match."/>

    </LinearLayout>
</ScrollView>