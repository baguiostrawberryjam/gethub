<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".profile.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp">

        <TextView
            android:id="@+id/tvProfileTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/neutral_deep"
            android:layout_marginBottom="16dp" />


        <!-- EDIT PROFILE BUTTON -->
        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile / Settings"
            android:background="@drawable/sel_button_primary"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@null"/>

        <!-- Full Name -->
        <TextView
            style="@style/InputLabelStyle"
            android:text="FULL NAME" />
        <TextView
            android:id="@+id/tvFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/neutral_deep"
            android:layout_marginBottom="16dp"
            tools:text="Juan C. Dela Cruz" />

        <!-- Student ID -->
        <TextView
            style="@style/InputLabelStyle"
            android:text="STUDENT ID" />
        <TextView
            android:id="@+id/tvStudentIDValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/neutral_deep"
            android:layout_marginBottom="16dp"
            tools:text="1234567890" />

        <!-- Email -->
        <TextView
            style="@style/InputLabelStyle"
            android:text="EMAIL" />
        <TextView
            android:id="@+id/tvEmailValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/neutral_deep"
            android:layout_marginBottom="16dp"
            tools:text="juan.c.delacruz@gethub.edu.ph" />

        <!-- Course/Program -->
        <TextView
            style="@style/InputLabelStyle"
            android:text="COURSE / PROGRAM" />
        <TextView
            android:id="@+id/tvCourseValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/neutral_deep"
            android:layout_marginBottom="16dp"
            tools:text="Bachelor of Science in Computer Engineering" />

        <!-- Campus -->
        <TextView
            style="@style/InputLabelStyle"
            android:text="CAMPUS BRANCH" />
        <TextView
            android:id="@+id/tvCampusValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/neutral_deep"
            android:layout_marginBottom="16dp"
            tools:text="Main Campus (Malolos)" />

        <!-- Contact Number -->
        <TextView
            style="@style/InputLabelStyle"
            android:text="CONTACT NUMBER (Editable)" />
        <TextView
            android:id="@+id/tvContactValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/neutral_deep"
            android:layout_marginBottom="16dp"
            tools:text="0917-XXX-XXXX" />

        <!-- Address -->
        <TextView
            style="@style/InputLabelStyle"
            android:text="ADDRESS (Editable)" />
        <TextView
            android:id="@+id/tvAddressValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/neutral_deep"
            android:layout_marginBottom="32dp"
            tools:text="Unit 101, Central St., Brgy. San Jose, City of Malolos, Bulacan" />
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>